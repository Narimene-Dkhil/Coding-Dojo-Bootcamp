@{
    ViewData["Title"] = "View Job Page";
}

@model MyViewModel

<h2 class="ms-3 mb-3 mt-3">@Model.Job.Title</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">

            <div class="card border-dark mb-3">
                <div class="card-body">
                    <p>@Model.Job.Description</p>
                    <p>Location: @Model.Job.Location</p>
                    <p>Posted by: @Model.User.FirstName @Model.User.LastName</p>
                    <p>Posted on: @Model.Job.CreatedAt.ToString("MMMM d, yyyy")</p>
                </div>
            </div>

            <div class="d-flex">
                @if (Model.Job.UserId == Model.LoggedInUser.UserId)
                {
                    <div class="d-flex">
                        
                        <form asp-action="AddJobToFavorites" asp-route-jobId="@Model.Job.JobId" method="post" class="m-0">
                            <input type="submit" value="Add To My Jobs" class="btn btn-link">
                        </form>

                        <a href="/edit/@Model.Job.JobId" class="btn btn-link">Edit</a>
                        
                        <form asp-action="DeleteJob" asp-controller="Home" asp-route-jobId="@Model.Job.JobId"
                            method="post" class="m-0">
                            <input type="submit" value="Cancel" class="btn btn-link">
                        </form>
                    </div>
                }
                else
                {
                    <form asp-action="AddJobToFavorites" asp-route-jobId="@Model.Job.JobId" method="post" class="m-0">
                        <input type="submit" value="Add To My Jobs" class="btn btn-link">
                    </form>
                }
            </div>
        </div>
    </div>
</div>
