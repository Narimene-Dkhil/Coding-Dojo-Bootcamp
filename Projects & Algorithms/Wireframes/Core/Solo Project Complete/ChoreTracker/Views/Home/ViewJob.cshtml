@{
    ViewData["Title"] = "View Job Page";
}

@model MyViewModel

<h2 class="ms-3 mb-3 mt-3">@Model.Job.Title</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card border-dark mb-3">
                <div class="card-body text-secondary">
                    <p><strong>Description:</strong> @Model.Job.Description</p>
                    <p><strong>Location:</strong> @Model.Job.Location</p>
                    <p><strong>Posted by: </strong> Dr. @Model.User.FirstName
                        @Model.User.LastName</p>
                    <p><strong>Posted on:</strong>
                        @Model.Job.CreatedAt.ToString("MMMM d, yyyy")</p>
                </div>
            </div>

            <!-- Updated favorite/unfavorite and creator options logic -->
            <div class="d-flex">
                @if (Model.IsFavorited)
                {
                    <!-- Display Unfavorite button if job is already favorited -->
                    <form asp-action="RemoveJobFromFavorites"
                        asp-route-jobId="@Model.Job.JobId" method="post"
                        class="m-0">
                        <input type="submit" value="Unfavorite"
                            class="btn btn-light me-2">
                    </form>
                }
                else
                {
                    <!-- Display Add To My Jobs button if job is not favorited -->
                    <form asp-action="AddJobToFavorites"
                        asp-route-jobId="@Model.Job.JobId" method="post"
                        class="m-0">
                        <input type="submit" value="Add To My Jobs"
                            class="btn btn-light me-2">
                    </form>
                }

                @if (Model.Job.UserId == Model.LoggedInUser.UserId)
                {
                    <!-- Job creator options: Edit and Cancel buttons -->
                    <a href="/edit/@Model.Job.JobId" class="btn btn-light me-2">Edit</a>
                    <form asp-action="DeleteJob" asp-controller="Home"
                        asp-route-jobId="@Model.Job.JobId" method="post"
                        class="m-0">
                        <input type="submit" value="Cancel" class="btn btn-light me-2">
                    </form>
                }
            </div>
        </div>
    </div>
</div>
