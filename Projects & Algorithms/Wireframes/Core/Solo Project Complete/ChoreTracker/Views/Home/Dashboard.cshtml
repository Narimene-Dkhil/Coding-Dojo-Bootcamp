@{
    ViewData["Title"] = "Dashboard Page";
}

@model MyViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5>Welcome @Model.User.FirstName!</h5>
    <div class="ms-auto">
        <a href="/addJob" class="btn btn-link">Add A Job</a>
        <a href="/myJobs" class="btn btn-link">My Jobs</a>
    </div>
</div>

<!-- Search Form -->
<form asp-action="Dashboard" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchLocation" value="@ViewBag.SearchLocation" class="form-control" placeholder="Search by Location">
        <button class="btn btn-primary" type="submit">Search</button>
        <a href="/dashboard" class="btn btn-secondary">Clear Search</a>
    </div>
</form>

<div class="row">
    <div class="col-md-6">
        <h6 class="mb-3">Click "Add" to add a Job to your Favorite Jobs List!</h6>
        <table class="table table-light table-hover">
            <thead>
                <tr>
                    <th>Job</th>
                    <th>Location</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.AllJobs.Count > 0)
                {
                    @foreach (Job job in Model.AllJobs)
                    {
                        <tr>
                            <td>@job.Title</td>
                            <td>@job.Location</td>
                            <td>
                                @if (job.UserId == (int)ViewBag.LoggedUserId)
                                {
                                    <div class="d-flex align-items-center">
                                        <a href="/view/@job.JobId" class="btn btn-link">View</a>
                                        <form asp-action="AddJobToFavorites" asp-route-jobId="@job.JobId" method="post" class="m-0">
                                            <input type="submit" value="Add" class="btn btn-link">
                                        </form>
                                        <a href="/edit/@job.JobId" class="btn btn-link">Edit</a>
                                        <form asp-action="DeleteJob" asp-controller="Home" asp-route-jobId="@job.JobId" method="post" class="m-0">
                                            <input type="submit" value="Cancel" class="btn btn-link">
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <a href="/view/@job.JobId" class="btn btn-link">View</a>
                                        <form asp-action="AddJobToFavorites" asp-route-jobId="@job.JobId" method="post" class="m-0">
                                            <input type="submit" value="Add" class="btn btn-link">
                                        </form>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No jobs found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h6 class="mb-3">Favorite Jobs List!</h6>
        <table class="table table-light table-hover">
            <thead>
                <tr>
                    <th>My Favorite Jobs</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Favorite favorite in Model.User.Favorites)
                {
                    <tr>
                        <td>@favorite.Job.Title</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <a href="/view/@favorite.Job.JobId" class="btn btn-link">View</a>
                                <form asp-action="DeleteJob" asp-controller="Home" asp-route-jobId="@favorite.Job.JobId" method="post" class="m-0">
                                    <input type="submit" value="Done" class="btn btn-link">
                                </form>
                                <form asp-action="RemoveJobFromFavorites" asp-route-jobId="@favorite.Job.JobId" method="post" class="m-0">
                                    <input type="submit" value="Unfavorite" class="btn btn-link">
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
