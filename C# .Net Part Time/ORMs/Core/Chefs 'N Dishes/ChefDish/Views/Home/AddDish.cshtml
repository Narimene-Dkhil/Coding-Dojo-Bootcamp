@{
    ViewData["Title"] = "Add Dish Page";
}

@model Dish

<div class="text-center">
    @await Html.PartialAsync("_Navbar")
    <br>
    <h1 class="display-4">Add a dish</h1>

    <div>
        <form class="Form" asp-action="CreateDish" asp-controller="Home" method="post">
            <div class="row mb-3">
                <div class="col-md-4 text-start">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-4 text-center">
                    <label asp-for="ChefId">Chef's Name</label>
                    <select class="form-control" asp-for="ChefId">
                        @foreach(var c in ViewBag.AllChefs)
                        {
                            <option value="@c.ChefId">@c.FirstName @c.LastName</option>        
                        }
                    </select>
                </div>
                <div class="col-md-4 text-end">
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 text-start">
                    <label asp-for="Calories" class="control-label"></label>
                    <input asp-for="Calories" min="1" value="1" class="form-control" />
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
            </div>
            <div class="ButtonCenter">
                <input type="submit" class="btn btn-success" value="Add dish">
            </div>
        </form>
    </div>
</div>
