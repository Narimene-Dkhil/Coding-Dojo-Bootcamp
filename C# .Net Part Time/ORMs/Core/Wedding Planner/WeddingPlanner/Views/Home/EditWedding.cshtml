@{
    ViewData["Title"] = "Edit Wedding Page";
}

@model Wedding 

<div class="d-flex justify-content-between align-items-center">
    <h3>Welcome @ViewBag.LoggedUser.FirstName!</h3>
    <div>
        @await Html.PartialAsync("_Navbar")
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Edit a Wedding</h1>
            <form asp-action="CreateWedding" asp-controller="Home" asp-route-Id="@Model.WeddingId" method="post">
                <div class="form-group mt-2">
                    <label asp-for="Bride"></label>
                    <input asp-for="Bride" class="form-control">
                    <span asp-validation-for="Bride" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Groom"></label>
                    <input asp-for="Groom" class="form-control">
                    <span asp-validation-for="Groom" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="EventDate"></label>
                    <input asp-for="EventDate" class="form-control">
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <input type="submit" value="Edit" class="btn btn-info mt-2">
            </form>
        </div>
    </div>
</div>
