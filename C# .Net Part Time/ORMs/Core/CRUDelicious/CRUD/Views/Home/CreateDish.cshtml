@{
    ViewData["Title"] = "Add Dish Page";
}
@model Dish

<div class="text-center">
    <h1 class="display-4">Add a new Dish!</h1>
    <form asp-action="AddDish" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Chef"></label>
            <input asp-for="Chef" class="form-control" />
            <span asp-validation-for="Chef" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <input asp-for="Calories" value="1" class="form-control" />
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-info">Add Dish</button>
    </form>
</div>

