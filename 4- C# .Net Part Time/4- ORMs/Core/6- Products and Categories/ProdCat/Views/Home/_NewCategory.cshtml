@model Category

<form asp-action="AddCategory" asp-controller="Home" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-info mt-2">
</form>
