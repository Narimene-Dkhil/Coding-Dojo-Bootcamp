@{
    ViewData["Title"] = "Survey";
}
@model User

<div class="container text-center mt-5">
    <h1 class="display-4">Dojo Survey</h1>
    <form action="/process" method="post">
        <div class="form-group">
            <label asp-for="Name" class="text-primary">Your Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="text-primary">Dojo Location</label>
            <select asp-for="Location" class="form-control" >
                <option value="Online">Online</option>
                <option value="California">California</option>
                <option value="New York">New York</option>
                <option value="Los Angeles">Los Angeles</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Language" class="text-primary">Favorite Language</label>
            <select asp-for="Language" class="form-control">
                <option value="JavaScript">JavaScript</option>
                <option value="Python">Python</option>
                <option value="C#">C#</option>
                <option value="Java">Java</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Comment" class="text-primary">Comment (Optional):</label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>